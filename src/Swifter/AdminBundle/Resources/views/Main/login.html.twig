    'admin/js/bootstrap-popover.js'
    'admin/js/bootstrap-button.js'
    'admin/js/bootstrap-collapse.js'
    'admin/js/bootstrap-carousel.js'
    'admin/js/bootstrap-typeahead.js'
    'admin/js/bootstrap-tour.js'
    'admin/js/jquery.cookie.js'
    'admin/js/fullcalendar.min.js'
    'admin/js/jquery.dataTables.min.js'
    'admin/js/excanvas.js'
    'admin/js/jquery.flot.min.js'
    'admin/js/jquery.flot.pie.min.js'
    'admin/js/jquery.flot.stack.js'
    'admin/js/jquery.flot.resize.min.js'
    'admin/js/jquery.chosen.min.js'
